<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.ashapkaatgmail.spotifystreamer.TopTracksActivityFragment">

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/listview_toptracks" />

    <ProgressBar
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progressBarTopTracks"
        android:progressDrawable="@drawable/circular_progress_bar"

        android:layout_alignTop="@id/listview_toptracks"
        android:layout_alignBottom="@id/listview_toptracks"
        android:layout_alignStart="@id/listview_toptracks"
        android:layout_alignLeft="@id/listview_toptracks"
        android:layout_alignRight="@id/listview_toptracks"
        android:layout_alignEnd="@id/listview_toptracks"
        android:scaleType="fitXY" />

</RelativeLayout>
